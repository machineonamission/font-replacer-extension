{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "frankenfont",
  "description": "Smartly, efficiently, aggressively, and customizably replaces fonts across all websites.",
  "version": "0.0.1",
  "icons": {
    "16": "assets/frankenfont-16.png",
    "32": "assets/frankenfont-32.png",
    "48": "assets/frankenfont-48.png",
    "128": "assets/frankenfont-128.png",
    "1000": "assets/frankenfont-1000.png"
  },
  "options_page": "options/settings/index.html",
  "action": {
    "default_title": "frankenfont",
    "default_popup": "options/popup/index.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "extension_scripts/cors.js"
  },
  "content_scripts": [
    {
      "js": [
        "extension_scripts/config.js",
        "extension_scripts/content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "js": [
        "extension_scripts/content_world_main/world_main_type.js",
        "extension_scripts/content_world_main/receive_config.js",
        "extension_scripts/content_world_main/override_prototypes.js",
        "extension_scripts/content_world_main/engine_js.js",
        "extension_scripts/content_world_main/multiplexer.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}